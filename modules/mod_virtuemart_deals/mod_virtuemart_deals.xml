<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0.0" method="upgrade" client="site">
	<name>VirtueMart Deals</name>
	<creationDate>January 2016</creationDate>
	<author>PHPKungfu.com</author>
	<authorEmail>dev@phpkungfu.club</authorEmail>
	<authorUrl>http://www.phpkungfu.club</authorUrl>
	<copyright>Copyright (C) 20015 PHPKungfu. All rights reserved. </copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.2</version>
	<description>Deals for VirtueMart Product discounts.</description>
	<files>
		<filename module="mod_virtuemart_deals">mod_virtuemart_deals.php</filename>
		<filename>index.html</filename>
		<filename>mod_virtuemart_deals.xml</filename>
		<filename>en-GB.mod_virtuemart_deals.ini</filename>
		<filename>helper.php</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<params>
		<param name="sale_text" type="textarea" cols="36" rows="3" default="" label="Sale Text (to appear before time)" description="Text for sale name" />
		
		<param name="product_id" type="text" default="" label="Product ID ( make sure it has a discount applied )" description="Product ID of the product." />
				
		<param name="show_price" type="radio" default="1" label="Show Price" description="show_price">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_addtocart" type="radio" default="1" label="Show Addtocart" description="show_addtocart">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="debug_mode" type="radio" default="0" label="Debug Mode" description="Turn on debugging">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
	</params>
	<params group="advanced">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="module suffix" /> 
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
	<config>
		<fields name="params">
            <fieldset name="basic">
                <field name="product_id" type="text" default="" label="Product ID ( make sure it has a discount applied )" description="Virtuemart ID of the product" /> 
				
				
				<field name="show_price" type="radio" class="btn-group btn-group-yesno" default="1" label="Show Price" description="Show Price">
                    <option value="1">JYES</option>
					<option value="0">JNO</option>
                </field>
				
				<field name="show_addtocart" type="radio" class="btn-group btn-group-yesno" default="1" label="Show Add to Cart" description="Show Add to Cart">
                    <option value="1">JYES</option>
					<option value="0">JNO</option>
                </field>
				<field name="days" type="text" default="" label="Days label" description="Days label" /> 
				<field name="hours" type="text" default="" label="Hours label" description="Hours label" /> 
				<field name="minutes" type="text" default="" label="Minutes label" description="Minutes label" /> 
				<field name="seconds" type="text" default="" label="Seconds label" description="Seconds label" /> 
			</fieldset> 


            <fieldset name="advanced">
            	<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="cache" type="radio" default="0" class="btn-group btn-group-yesno" label="Enable Cache" description="Select whether to cache the content of this module">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" /> 
				
                <field name="class_sfx" type="text" default="" label="Menu Class Suffix" description="A suffix to be applied to the css class of the menu items" />
            </fieldset>
        </fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_virtuemart_deals.ini</language>
	</languages>
</extension>
