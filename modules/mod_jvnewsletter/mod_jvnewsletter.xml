<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Jv Newsletter</name>
	<author>Open Source Code Solutions Co</author>
	<creationDate>11/2015</creationDate>
	<copyright>Copyright (C) 2011 phpkungfu.club. All Rights Reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL or later.</license>
	<authorEmail>info@phpkungfu.club</authorEmail>
	<authorUrl>http://www.phpkungfu.club</authorUrl>
	<version>1.1.2</version>
	<description>A simple newsletter!</description>
	<files>
		<filename module="mod_jvnewsletter">mod_jvnewsletter.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
        <folder>services</folder>
        <folder>models</folder>
        <folder>js</folder>
        <folder>img</folder>
        <folder>css</folder>
	</files>
    
	<config>
		<fields name="params">
			<fieldset name="basic"
                addfieldpath="/modules/mod_jvnewsletter/models/fields">
                <field                     
                    name="chose"
                    type="list"
                    class="btn-group chose-service"
                    label="Chose a service">
                    <option value="0">- Chose -</option>
                    <option value="mailchimp">Mail Chimp</option>
                    <option value="cmonitor">Campaign Monitor</option>
                </field>
                <field 
                    name="api"
                    type="apikey"
                    label="Key API"/>                
                <field 
                    name="alway_check"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="Always Check API">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <!--<field 
                    name="auto_contact"
                    type="radio"
                    class="btn-group"
                    default="0"
                    description="Remenber assign module to page contact form."
                    label="Subscribe when contact">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field 
                    name="auto_register"
                    type="radio"
                    class="btn-group"
                    default="0"
                    description="Remenber assign module to page registion form."
                    label="Subscribe when register">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>-->
                <field 
                    name="chose_list"
                    type="radio"
                    class="btn-group"
                    default="1"
                    description="if off then auto switch to subscibe all on list activated"
                    label="Show List to Subscibe">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field 
                    name="email_validate"
                    type="radio"
                    class="btn-group"                    
                    default="1"
                    label="Validate email">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field 
                    name="show_label"
                    type="radio"
                    default="1"
                    class="btn-group"
                    label="Show label">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field 
                    name="fname"
                    type="radio"
                    default="1"
                    class="btn-group"
                    label="First Name">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field 
                    name="lname"
                    type="radio"
                    default="1"
                    class="btn-group"
                    label="Last Name">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field 
                    name="maxwidth"
                    type="text"
                    default="auto"
                    label="Max width" />
                <field 
                    name="pretext"
                    type="text"
                    default="Input your email to subcribe my website!"
                    label="Pre text" />
                <field 
                    name="show_dialog"
                    type="radio"
                    class="btn-group"                    
                    default="1"
                    label="Show dialog comfirm."
                    description="Only best suport Joomla 3">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field 
                    name="addscript"
                    type="radio"
                    class="btn-group"                    
                    default="0"
                    label="Add JQuery and Bootstrap"
                    description="">
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field 
                    name="title_dialog"
                    type="text"
                    label="Title Dialog"
                    default="Almost finished..."/>
                <field 
                    name="msg_dialog"
                    type="editor" 
                    width="350" 
                    filter="safehtml"
                    label="Message Dialog"
                    default="[OUTPUT] &lt;br /&gt;We need to confirm your email address. &lt;br /&gt;To complete the subscription process, please click the link in the email we just sent you."/>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
